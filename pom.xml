<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <groupId>com.msop</groupId>
    <artifactId>MSToolbox</artifactId>
    <version>0.1.8-SNAPSHOT</version>
    <name>MSToolbox</name>
    <packaging>pom</packaging>
    <description>
        Micro Service Toolbox - 微服务工具箱
    </description>
    <url>https://github.com/ruozhuliufenng/MSToolbox</url>
    <developers>
        <developer>
            <id>ruozhuliufeng</id>
            <name>若竹流风</name>
            <email>ruozhuliufeng@aixuxi.cn</email>
            <roles>
                <role>
                    Java Development Engineer
                </role>
            </roles>
            <timezone>2022-04-18 13:25:00</timezone>
        </developer>
    </developers>
    <properties>
        <ms.toolbox.version>0.1.8-SNAPSHOT</ms.toolbox.version>
        <java.version>1.8</java.version>
        <maven.plugin.version>3.8.1</maven.plugin.version>
        <spring.plugin.version>2.0.0.RELEASE</spring.plugin.version>
        <spring.boot.version>2.6.6</spring.boot.version>
        <spring.cloud.version>2021.0.1</spring.cloud.version>
        <spring.platform.version>Cairo-SR8</spring.platform.version>
        <mica.auto.version>2.2.2</mica.auto.version>
        <guava.version>20.0</guava.version>
        <protostuff.version>1.6.0</protostuff.version>
        <swagger.version>2.10.5</swagger.version>
        <swagger.models.version>1.6.2</swagger.models.version>
        <redisson.version>3.16.1</redisson.version>
        <JustAuth.version>1.15.8</JustAuth.version>
        <jjwt.version>0.11.2</jjwt.version>
        <mybatis.plus.version>3.5.1</mybatis.plus.version>
        <mybatis.plus.generator.version>3.5.2</mybatis.plus.generator.version>
        <spring.boot.admin.version>2.6.2</spring.boot.admin.version>
        <alibaba.cloud.version>2021.0.1.0</alibaba.cloud.version>
        <alibaba.nacos.version>2.0.4</alibaba.nacos.version>
        <alibaba.seata.version>1.4.2</alibaba.seata.version>
    </properties>

    <modules>
        <!-- 通用模块 -->
        <module>ms-core-common</module>
        <!-- OSS存储工具模块 -->
        <module>ms-core-oss</module>
        <!-- 第三方登录 -->
        <module>ms-core-social</module>
        <!-- Security安全封装 -->
        <module>ms-core-secure</module>
        <!-- Swagger封装处理 -->
        <module>ms-core-swagger</module>
        <!-- Zookeeper组件封装 -->
        <module>ms-core-zookeeper</module>
        <!-- Redis组件封装 -->
        <module>ms-core-redis</module>
        <!-- 日志组件封装 -->
        <module>ms-core-log</module>
        <!-- Mybatis组件扩展封装 -->
        <module>ms-core-mybatis</module>
        <!-- Cloud组件封装 -->
        <module>ms-core-cloud</module>
        <!-- Sentinel限流策略 -->
        <module>ms-core-sentinel</module>
        <!-- 代码生成组件 -->
        <module>ms-core-develop</module>
        <!-- 负载均衡策略 -->
        <module>ms-core-loadbalancer</module>
        <!-- ES组件 -->
        <module>ms-core-elasticsearch</module>
        <!--  Launch 组件 -->
        <module>ms-core-launch</module>
    </modules>
    <!-- 依赖版本管理 -->
    <dependencyManagement>
        <dependencies>
            <!-- Spring Plugin 依赖管理 -->
            <dependency>
                <groupId>org.springframework.plugin</groupId>
                <artifactId>spring-plugin-core</artifactId>
                <version>${spring.plugin.version}</version>
            </dependency>
            <dependency>
                <groupId>org.springframework.plugin</groupId>
                <artifactId>spring-plugin-metadata</artifactId>
                <version>${spring.plugin.version}</version>
            </dependency>
            <!-- Spring Boot 依赖版本管理 -->
            <dependency>
                <groupId>org.springframework.boot</groupId>
                <artifactId>spring-boot-dependencies</artifactId>
                <version>${spring.boot.version}</version>
                <type>pom</type>
                <scope>import</scope>
            </dependency>
            <!-- Spring Cloud 依赖版本管理 -->
            <dependency>
                <groupId>org.springframework.cloud</groupId>
                <artifactId>spring-cloud-dependencies</artifactId>
                <version>${spring.cloud.version}</version>
                <type>pom</type>
                <scope>import</scope>
            </dependency>
            <!-- Platform 依赖版本管理 -->
            <dependency>
                <groupId>io.spring.platform</groupId>
                <artifactId>platform-bom</artifactId>
                <version>${spring.platform.version}</version>
                <type>pom</type>
                <scope>import</scope>
            </dependency>
            <!-- 模块依赖版本管理 -->
            <dependency>
                <groupId>com.msop</groupId>
                <artifactId>ms-core-common</artifactId>
                <version>${ms.toolbox.version}</version>
            </dependency>
            <dependency>
                <groupId>com.msop</groupId>
                <artifactId>ms-core-cloud</artifactId>
                <version>${ms.toolbox.version}</version>
            </dependency>
            <dependency>
                <groupId>com.msop</groupId>
                <artifactId>ms-core-launch</artifactId>
                <version>${ms.toolbox.version}</version>
            </dependency>
            <dependency>
                <groupId>com.msop</groupId>
                <artifactId>ms-core-develop</artifactId>
                <version>${ms.toolbox.version}</version>
            </dependency>
            <dependency>
                <groupId>com.msop</groupId>
                <artifactId>ms-core-elasticsearch</artifactId>
                <version>${ms.toolbox.version}</version>
            </dependency>
            <dependency>
                <groupId>com.msop</groupId>
                <artifactId>ms-core-loadbalancer</artifactId>
                <version>${ms.toolbox.version}</version>
            </dependency>
            <dependency>
                <groupId>com.msop</groupId>
                <artifactId>ms-core-log</artifactId>
                <version>${ms.toolbox.version}</version>
            </dependency>
            <dependency>
                <groupId>com.msop</groupId>
                <artifactId>ms-core-mybatis</artifactId>
                <version>${ms.toolbox.version}</version>
            </dependency>
            <dependency>
                <groupId>com.msop</groupId>
                <artifactId>ms-core-oss</artifactId>
                <version>${ms.toolbox.version}</version>
            </dependency>
            <dependency>
                <groupId>com.msop</groupId>
                <artifactId>ms-core-redis</artifactId>
                <version>${ms.toolbox.version}</version>
            </dependency>
            <dependency>
                <groupId>com.msop</groupId>
                <artifactId>ms-core-secure</artifactId>
                <version>${ms.toolbox.version}</version>
            </dependency>
            <dependency>
                <groupId>com.msop</groupId>
                <artifactId>ms-core-sentinel</artifactId>
                <version>${ms.toolbox.version}</version>
            </dependency>
            <dependency>
                <groupId>com.msop</groupId>
                <artifactId>ms-core-social</artifactId>
                <version>${ms.toolbox.version}</version>
            </dependency>
            <dependency>
                <groupId>com.msop</groupId>
                <artifactId>ms-core-swagger</artifactId>
                <version>${ms.toolbox.version}</version>
            </dependency>
            <dependency>
                <groupId>com.msop</groupId>
                <artifactId>ms-core-zookeeper</artifactId>
                <version>${ms.toolbox.version}</version>
            </dependency>
        </dependencies>
    </dependencyManagement>

    <!-- 通用依赖 -->
    <dependencies>
        <!-- Spring 切面 -->
        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter-aop</artifactId>
        </dependency>
        <!-- Spring 端点监控 -->
        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter-actuator</artifactId>
        </dependency>
        <!-- 配置管理 -->
        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-configuration-processor</artifactId>
            <optional>true</optional>
        </dependency>
        <!-- Spring retry -->
        <dependency>
            <groupId>org.springframework.retry</groupId>
            <artifactId>spring-retry</artifactId>
        </dependency>
        <!-- Lombok 简化开发 -->
        <dependency>
            <groupId>org.projectlombok</groupId>
            <artifactId>lombok</artifactId>
            <scope>provided</scope>
        </dependency>
        <!-- hibernate 校验 -->
        <dependency>
            <groupId>org.hibernate.validator</groupId>
            <artifactId>hibernate-validator</artifactId>
        </dependency>
        <dependency>
            <groupId>net.dreamlu</groupId>
            <artifactId>mica-auto</artifactId>
            <version>${mica.auto.version}</version>
            <scope>provided</scope>
        </dependency>
    </dependencies>

    <build>
        <finalName>${project.name}</finalName>
        <resources>
            <resource>
                <directory>src/main/resources</directory>
            </resource>
            <resource>
                <directory>src/main/java</directory>
                <includes>
                    <include>**/*.xml</include>
                </includes>
            </resource>
        </resources>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>${maven.plugin.version}</version>
                <configuration>
                    <source>${java.version}</source>
                    <target>${java.version}</target>
                    <encoding>UTF-8</encoding>
                    <compilerArgs>
                        <arg>-parameters</arg>
                    </compilerArgs>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-javadoc-plugin</artifactId>
                <version>2.9.1</version>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-surefire-plugin</artifactId>
                <version>2.18.1</version>
                <configuration>
                    <skipTests>true</skipTests>
                </configuration>
            </plugin>
        </plugins>
    </build>

</project>
